package no.uib.gameutils.entity;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.image.BufferedImage;

import no.uib.gameutils.entity.type.Tile;
import no.uib.gameutils.position.Position2D;
import no.uib.gameutils.sprite.SpriteLoader;

public class StaticImage implements Tile {
	private final BufferedImage IMAGE;
	private int xPos, yPos;
	private int tileWidth, tileHeight;



	public StaticImage(SpriteLoader ldr, int imgRow, int imgCol, int xPos, int yPos){
		this.IMAGE = ldr.getImage(imgCol, imgRow);
		this.xPos = xPos;
		this.yPos = yPos;
		this.tileHeight = ldr.tileHeight();
		this.tileWidth = ldr.tileWidth();
	}

	@Override
	public void paint(Graphics gfx) {
		gfx.drawImage(IMAGE, xPos, yPos, null);
	}

	@Override
	public int xPos() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public int yPos() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public Position2D position() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void setX(int x) {
		// TODO Auto-generated method stub

	}

	@Override
	public void setY(int y) {
		// TODO Auto-generated method stub

	}

	@Override
	public void setPosition(Position2D position) {
		// TODO Auto-generated method stub

	}

	public static class StaticImageBuilder {
		private int xPos, yPos;
		private SpriteLoader ldr;

		public StaticImageBuilder(){
			xPos = yPos = 0;
			ldr = null;
		}

		/*
		 * This was autogenerated by GNU Emacs. Because I'm not writing that by myself. :)
		 */
		int imgCol
		int imgRow
		public StaticImageBuilder xPos(int xPos){
			this.xPos = xPos;
			return this;
		}
		public StaticImageBuilder yPos(int yPos){
			this.yPos = yPos;
			return this;
		}
		public StaticImageBuilder ldr(SpriteLoader ldr){
			this.ldr = ldr;
			return this;
		}

		public StaticImageBuilder position(Position2D pos){
			this.xPos = pos.getX();
			this.yPos = pos.getY();
			return this;
		}

		public StaticImage create(){
			if(null == ldr){
				throw new IllegalStateException("No SpriteLoader set");
			}

			return new StaticImage(ldr, xPos, yPos);
		}
	}

}
